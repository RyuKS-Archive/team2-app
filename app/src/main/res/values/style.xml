<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="sectionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <!-- Common Style -->
    <style name="warp_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="nomalText" parent="warp_default">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="nomalTextW" parent="nomalText">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="nomalTextCyan" parent="nomalText">
        <item name="android:textColor">#40C4FF</item>
    </style>
    <style name="nomalTextGray" parent="nomalText">
        <item name="android:textColor">#9E9E9E</item>
    </style>
    <style name="nomalTextNavy" parent="nomalText">
        <item name="android:textColor">#0B3861</item>
    </style>

    <style name="smallText" parent="warp_default">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>